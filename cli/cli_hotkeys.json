{
  "version": "1.0.0",
  "description": "Configurable hotkey bindings for CLI interactive workout editor - vim-like modal interface",

  "view_mode": {
    "description": "Default navigation and inspection mode",
    "navigation": {
      "toggle_day_week_view": "d",
      "toggle_week_day_view": "w",
      "previous_day": "left",
      "next_day": "right",
      "previous_exercise": "up",
      "next_exercise": "down",
      "jump_to_exercise_1": "1",
      "jump_to_exercise_2": "2",
      "jump_to_exercise_3": "3",
      "jump_to_exercise_4": "4",
      "jump_to_exercise_5": "5",
      "jump_to_exercise_6": "6",
      "jump_to_exercise_7": "7",
      "jump_to_exercise_8": "8",
      "jump_to_exercise_9": "9",
      "next_editable_field": "t",
      "previous_editable_field": "T"
    },
    "actions": {
      "replace_current_field": "r",
      "open_exercise_database": "e",
      "swap_with_random": "s",
      "toggle_work_definition": "m",
      "delete_exercise": "delete",
      "undo_last_change": "u",
      "show_help": "?",
      "show_help_alt": "h",
      "enter_command_mode": ":",
      "quit": "q"
    }
  },

  "edit_mode": {
    "description": "Active editing of a field value",
    "actions": {
      "confirm_edit": "enter",
      "confirm_and_next_field": "tab",
      "cancel_edit": "escape"
    }
  },

  "command_mode": {
    "description": "Execute slash commands (vim-style)",
    "commands": {
      "save": ["w", "save"],
      "quit": ["q", "quit"],
      "save_and_quit": ["wq", "x"],
      "force_quit": ["q!", "quit!"],
      "help": ["help", "h"],
      "validate": ["validate", "check"]
    }
  },

  "exercise_db_browser_mode": {
    "description": "Exercise database filtering and selection interface with modal editing",
    "normal_mode": {
      "navigation": {
        "move_up": "up",
        "move_down": "down",
        "page_up": "pageup",
        "page_down": "pagedown",
        "select_exercise": "enter",
        "cancel_browser": "escape",
        "cancel_browser_alt": "q"
      },
      "mode_switching": {
        "enter_search_mode": "/",
        "enter_category_filter_mode": "c",
        "enter_muscle_filter_mode": "m",
        "enter_equipment_filter_mode": "e",
        "reset_all_filters": "r"
      }
    },
    "search_mode": {
      "description": "Pattern match exercise names - type to filter",
      "actions": {
        "type_character": "any printable character",
        "delete_character": "backspace",
        "exit_search": "enter",
        "cancel_search": "escape"
      },
      "navigation": {
        "move_up": "up",
        "move_down": "down"
      }
    },
    "filter_modes": {
      "description": "Select specific filters - type to narrow list, space to toggle",
      "category_mode": "initiated with 'c'",
      "muscle_mode": "initiated with 'm'",
      "equipment_mode": "initiated with 'e'",
      "actions": {
        "type_character": "any printable character",
        "delete_character": "backspace",
        "toggle_selected_filter": "space",
        "finish_filtering": "enter",
        "cancel_filtering": "escape"
      },
      "navigation": {
        "move_up": "up",
        "move_down": "down"
      }
    }
  },

  "help_overlay_mode": {
    "description": "Help screen display",
    "actions": {
      "close_help": "escape",
      "close_help_alt": "q",
      "scroll_up": "up",
      "scroll_down": "down"
    }
  },

  "customization_notes": [
    "To customize: edit this file and restart the interactive editor",
    "Key values should be lowercase strings matching readline key names",
    "Special keys: 'enter', 'escape', 'tab', 'space', 'up', 'down', 'left', 'right', 'pageup', 'pagedown'",
    "Multi-character sequences (like 'db') are supported in view_mode.actions only",
    "Command mode commands support aliases (arrays of strings)"
  ]
}
