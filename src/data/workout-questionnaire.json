      "description": "This determines your training split and exercise selection",
      "options": [
        {
          "value": "build_muscle",
          "label": "Build Muscle",
          "description": "Strength-focused training with progressive overload"
        },
        {
          "value": "tone",
          "label": "Tone / Get Fit",
          "description": "Balanced strength and conditioning"
        },
        {
          "value": "lose_weight",
          "label": "Lose Weight",
          "description": "HIIT-focused with metabolic conditioning"
        }
      ],
      "required": true
    },
    {
      "id": "session_duration",
      "type": "multiple_choice",
      "question": "How much time per workout?",
      "description": "Determines number of exercises and compound blocks",
      "options": [
        {
          "value": "20",
          "label": "20 minutes",
          "description": "Quick, efficient workouts"
        },
        {
          "value": "30",
          "label": "30 minutes",
          "description": "Balanced volume and efficiency"
        },
        {
          "value": "60",
          "label": "60 minutes",
          "description": "Full sessions with higher volume"
        }
      ],
      "required": true
    },
    {
