      "options": [
        {
          "value": "2",
          "label": "2 days",
          "description": "Upper / Lower split"
        },
        {
          "value": "3",
          "label": "3 days",
          "description": "Push / Pull / Legs"
        },
        {
          "value": "4",
          "label": "4 days",
          "description": "PPL + Mobility"
        },
        {
          "value": "5",
          "label": "5 days",
          "description": "PPL + Volume days"
        },
        {
          "value": "6",
          "label": "6 days",
          "description": "PPL + Mobility + Volume"
        },
        {
          "value": "7",
          "label": "7 days",
          "description": "Full PPL rotation + Flexibility"
